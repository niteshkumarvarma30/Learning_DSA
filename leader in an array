approach: pick last element as max_from_right and start comparing with each element backward and update max_from_right.



class Solution {
    // Function to find the leaders in the array.
  public:
    vector<int> leaders(vector<int>& arr) {
        // Code here
        vector<int> vec;
        int n=arr.size();
        int max_from_right=arr[n-1];
        vec.push_back(max_from_right);
        for(int i=n-2;i>=0;i--){
            if(arr[i]>=max_from_right){
                vec.push_back(arr[i]);
              max_from_right=arr[i];
        }
        }
            
    reverse(vec.begin(), vec.end());
   
    return vec;
    }
};
